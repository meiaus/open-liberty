<server>
	<featureManager>
		<feature>servlet-3.0</feature>
		<feature>appSecurity-2.0</feature>
		<feature>jsp-2.2</feature>
		<feature>jaxws-2.2</feature>
		<feature>wsSecuritySaml-1.1</feature>
	</featureManager>

	<include location="../fatTestPorts.xml" />

	<logging suppressSensitiveTrace="true" />

	<!-- Please use encoded passwords in this server definition. We need some 
		tests that verify that we can handle encoded pw's -->

	<basicRegistry
		id="basic"
		realm="customRealm"
	>
		<user
			name="user1"
			password="{xor}LDo8Ki02KyY=" />
		<user
			name="user2"
			password="{xor}LDo8Ki02KyY=" />
	</basicRegistry>
	<wsSecurityClient
		id="default"
		ws-security.password="{xor}LDo8Ki02KyY="
		ws-security.username="user2"
	>
	</wsSecurityClient>

	<wsSecurityProvider
		id="default"
		ws-security.timestamp.timeToLive="60"
		ws-security.timestamp.futureTimeToLive="60"
		ws-security.cache.config.file="${server.config.dir}/cxf-ehcache.xml"
	>
		<signatureProperties
			org.apache.ws.security.crypto.merlin.keystore.type="jks"
			org.apache.ws.security.crypto.merlin.keystore.password="Liberty"
			org.apache.ws.security.crypto.merlin.keystore.alias="sslspservercert"
			org.apache.ws.security.crypto.merlin.keystore.file="samlKey.jks" />
		<encryptionProperties
			org.apache.ws.security.crypto.merlin.keystore.type="jks"
			org.apache.ws.security.crypto.merlin.keystore.password="LibertyServer"
			org.apache.ws.security.crypto.merlin.keystore.file="${server.config.dir}/samlSslServerTrust.jks" />

	</wsSecurityProvider>
</server>

